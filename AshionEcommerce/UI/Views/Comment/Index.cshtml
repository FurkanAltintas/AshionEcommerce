@model List<ENTITY.Concrete.Comment>

@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        var soyadUzunluk = item.FullName.LastIndexOf(" ");
        var soyadİlkHarf = item.FullName.Substring(soyadUzunluk, 2);
        <p>
            Ad Soyad: @item.FullName.Substring(0, 1)** @soyadİlkHarf**
            <br />
            Konu:
            <b>@item.Subject</b>
            <br />
            Mesaj:
            @item.Message - @item.CreateDate.ToString("dd MM yyyy")
        </p>
        <hr />
    }
}
else
{
    <p>Bu ürün için daha önce yorum yapılmadı.</p>
}