@model List<ENTITY.Concrete.ProductSize>

<li>
    <span>Mevcut Boyut:</span>
    <div class="size__btn">
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                <label for="@item.Size.Name-btn" class="active">
                    <input type="radio" id="@item.Size.Name-btn">
                    @item.Size.Name
                </label>
            }
        }
        else
        {
            <p>Mevcut boyut bulunmamaktadır</p>
        }

    </div>
</li>
