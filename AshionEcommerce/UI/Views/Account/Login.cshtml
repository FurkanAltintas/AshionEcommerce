@model ENTITY.Concrete.User

@{
    ViewBag.Title = "Login";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/App_Themes/Account/login/fonts/icomoon/style.css")">
    <link rel="stylesheet" href="@Url.Content("~/App_Themes/Account/login/css/owl.carousel.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/App_Themes/Account/login/css/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/App_Themes/Account/login/css/style.css")">
    <title>Giriş - Meta</title>
</head>
<body>
    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('/App_Themes/Account/login/images/bg.jpg');"></div>
        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3>GİRİŞ YAP</h3>
                        <p></p>
                        <form action="/Account/Login" method="post">
                            <div class="form-group first">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E-posta *" })
                            </div>
                            <div class="form-group last mb-3">
                                <label for="password">Password</label>
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Şifre *" })
                            </div>
                            <div class="d-flex mb-5 align-items-center">
                                <label class="control control--checkbox mb-0">
                                    <span class="caption">Beni Hatırla</span>
                                    <input type="checkbox" checked="checked" />
                                    <div class="control__indicator"></div>
                                </label>
                                <span class="ml-auto"><a href="#" class="forgot-pass">Şifremi Unuttum</a></span>
                            </div>
                            <input type="submit" value="GİRİŞ YAP" class="btn btn-block btn-primary">
                        </form>
                        <br />
                        <a href="/register" style="text-decoration: none"><input type="button" value="KAYIT OL" class="btn btn-block btn-danger"></a>
                        <br />
                        <a href="@Url.Action("","")" style="text-decoration: none;"><input type="button" value="ÜYE OLMADAN DEVAM ET" class="btn btn-block btn-dark"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/App_Themes/Account/login/js/jquery-3.3.1.min.js"></script>
    <script src="~/App_Themes/Account/login/js/popper.min.js"></script>
    <script src="~/App_Themes/Account/login/js/bootstrap.min.js"></script>
    <script src="~/App_Themes/Account/login/js/main.js"></script>
</body>
</html>