@model List<ENTITY.Concrete.Collection> 

<section class="banner set-bg" data-setbg="/App_Themes/User/ashion-master/img/banner/banner-1.jpg">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-8 m-auto">
                <div class="banner__slider owl-carousel">
                    @foreach (var item in Model)
                    {
                        <div class="banner__item">
                            <div class="banner__text">
                                <span>@item.Title</span>
                                <h1>@item.SubTitle</h1>
                                <a href="#">Şimdi Satın Al</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
